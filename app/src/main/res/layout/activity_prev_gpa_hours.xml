<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <TextView
        android:id="@+id/gpaBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:autoSizeMaxTextSize="@dimen/_20ssp"
        android:autoSizeMinTextSize="@dimen/_15ssp"
        android:autoSizeTextType="uniform"
        android:text="Gpa before"
        android:textColor="#FFCF5E"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"


        />


    <EditText
        android:id="@+id/et_gpa"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/gpaBefore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gpaBefore"
        android:textColor="@color/textColor3"


        />

    <Button
        android:id="@+id/to_courses_results_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:backgroundTint="@color/white"
        android:onClick="btnOnClick"
        android:paddingTop="@dimen/_9sdp"
        android:paddingBottom="@dimen/_9sdp"
        android:text="next"
        android:textColor="@color/textColor2"
        android:textSize="@dimen/_14ssp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:text="Total Hours passed"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/to_courses_results_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpaBefore"

        />

    <EditText
        android:id="@+id/et_hours"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_20sdp"
        android:inputType="textPersonName"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:backgroundTint="@color/white"
        android:textColor="@color/textColor3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>